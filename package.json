{
	"name": "Poke-Codex",
	"version": "1.0.0",
	"description": "Typescript Discord Bot",
	"main": "index.js",
	"scripts": {
		"test": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
		"lint": "prettier --write .",
		"build": "tsc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/InternalRBLX/Poke-Codex.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/InternalRBLX/Poke-Codex/issues"
	},
	"homepage": "https://github.com/InternalRBLX/Poke-Codex#readme",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-angular": "^12.1.4",
		"@types/glob": "^7",
		"@types/mysql": "^2.15.18",
		"@types/node": "^15.6.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.0",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn dlx @yarnpkg/doctor && lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.ts": "prettier --write",
		"*.js": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	},
	"dependencies": {
		"@types/ms": "^0.7.31",
		"alpha-sort": "^5.0.0",
		"consola": "^2.15.3",
		"discord.js": "^12.5.3",
		"glob": "^7.1.7",
		"moment": "^2.29.1",
		"ms": "^2.1.3",
		"mysql": "^2.18.1"
	}
}
